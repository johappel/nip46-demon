{
  "version": "nostr-form-v1",
  "id": "nip52-calendar-example",
  "title": "NIP-52 Kalender (Beispiel)",
  "description": "Beispiel-Schema fuer NIP-52 mit automatischer Browser-TZID und Geohash-Ableitung.",
  "kind": 31922,
  "adapter": "nip-52",
  "kindSelectorField": "calendarKind",
  "kindSelectorMap": {
    "dateBased": 31922,
    "timeBased": 31923,
    "calendar": 31924,
    "rsvp": 31925
  },
  "submitLabel": "Kalender-Event signieren + senden",
  "contentField": "description",
  "fields": [
    {
      "name": "calendarKind",
      "label": "Kalender-Kind",
      "type": "select",
      "required": true,
      "defaultValue": "timeBased",
      "options": [
        { "label": "Date based (31922)", "value": "dateBased" },
        { "label": "Time based (31923)", "value": "timeBased" },
        { "label": "Calendar (31924)", "value": "calendar" },
        { "label": "RSVP (31925)", "value": "rsvp" }
      ]
    },
    {
      "name": "title",
      "label": "Titel",
      "type": "text",
      "required": true,
      "maxLength": 160
    },
    {
      "name": "summary",
      "label": "Kurzbeschreibung (summary)",
      "type": "text",
      "required": false,
      "maxLength": 280
    },
    {
      "name": "identifier",
      "label": "Identifier (d-Tag)",
      "type": "text",
      "required": false,
      "maxLength": 120,
      "placeholder": "calendar-entry-1"
    },
    {
      "name": "start",
      "label": "Start",
      "type": "datetime-local",
      "required": false
    },
    {
      "name": "end",
      "label": "Ende",
      "type": "datetime-local",
      "required": false
    },
    {
      "name": "location",
      "label": "Ort",
      "type": "text",
      "required": false,
      "maxLength": 220,
      "placeholder": "Berlin, 52.5200, 13.4050"
    },
    {
      "name": "image",
      "label": "Bild URL",
      "type": "url",
      "required": false,
      "placeholder": "https://..."
    },
    {
      "name": "calendarReference",
      "label": "Kalender/Event Referenz (a-Tag, fuer RSVP)",
      "type": "text",
      "required": false,
      "placeholder": "31924:<pubkey>:<identifier>"
    },
    {
      "name": "rsvpStatus",
      "label": "RSVP Status",
      "type": "select",
      "required": false,
      "defaultValue": "accepted",
      "options": [
        { "label": "accepted", "value": "accepted" },
        { "label": "declined", "value": "declined" },
        { "label": "tentative", "value": "tentative" }
      ]
    },
    {
      "name": "description",
      "label": "Beschreibung",
      "type": "textarea",
      "required": false,
      "maxLength": 5000,
      "rows": 8
    }
  ]
}

